<div class="product-grid">
  <div class="product-card">
    <div class="product-image">
      <img src="https://picsum.photos/id/0/400/400" alt="Laptop">
    </div>
    <div class="product-info">
      <h2 class="product-name">Laptop</h2>
      <p class="product-description">Powerful laptop for work and play.</p>
      <p class="product-price">$999.99</p>
      <button class="buy-button">Buy Now</button>
    </div>
  </div>

  <div class="product-card">
    <div class="product-image">
      <img src="https://picsum.photos/id/175/400/400" alt="Clock">
    </div>
    <div class="product-info">
